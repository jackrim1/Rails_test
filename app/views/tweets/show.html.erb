<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to 'Tweets', tweets_path %> > Tweet #<%= @tweet.id %></h1>
      <%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Body</h5>
        <%= @tweet.body %>
      </div>
            <div class="mb-4">
        <h5>Title</h5>
        <%= @tweet.title %>
      </div>
          </div>
  </div>
</div>
